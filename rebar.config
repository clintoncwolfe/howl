%% -*- erlang -*-
{sub_dirs, ["rel", "apps/howl"]}.
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  jsxd,
  {merl,          ".*",     {git, "https://github.com/Licenser/merl.git",       {branch, "master"}}},
  {lager, "2.0.*",{git, "https://github.com/basho/lager.git", {tag,"2.0.3"}}},
  {fifo_dt, "0.1.*", {git, "https://github.com/project-fifo/fifo_dt.git", {tag, "0.1.46"}}},
  {fifo_spec, "0.1.*", {git, "https://github.com/project-fifo/fifo_spec.git", {tag, "0.1.16"}}},
  {clique, ".*", {git, "https://github.com/project-fifo/clique.git", {branch, "develop"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},
  {wiggle, ".*", {git, "http://github.com/project-fifo/wiggle-app.git", {branch, "dev"}}},
  {riak_core, ".*", {git, "https://github.com/project-fifo/riak_core.git", {branch, "fifo-0.6.2"}}},
  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {tag, "2.0.0"}}},
  {mdns_server_lib, ".*", {git, "https://github.com/Licenser/mdns_server_lib.git", {tag, "0.1.18"}}},
  {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.1"}}},
  {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {tag, "v1.4.4"}}},
  {msgpack, ".*", {git, "https://github.com/msgpack/msgpack-erlang.git", {tag, "0.3.3"}}},
  {libsnarl, "0.3.*", {git, "https://github.com/project-fifo/libsnarl.git", {tag, "0.3.19"}}},
  {lager_watchdog, ".*", {git, "https://github.com/project-fifo/lager_watchdog.git", {tag, "0.1.8"}}},
  {fifo_utils, "0.1.*", {git, "https://github.com/project-fifo/fifo_utils.git", {tag, "0.1.9"}}},
  folsom_ddb,
  {fqc, ".*", {git, "https://github.com/project-fifo/fqc.git", {tag, "0.1.5"}}},
  %% We need to include qdate seperately since rebar/hex do not allow non package dependenceis
  %% and there isn't a qdate package:
  {qdate, ".*", {git, "https://github.com/choptastic/qdate.git", {tag, "0.3.0"}}},
  %% Runtime tools
  {eper, "0.87.0", {git, "https://github.com/massemanet/eper.git", {tag, "0.87.0"}}},
  {recon, ".*", {git, "https://github.com/ferd/recon.git", {tag, "2.2.1"}}}
 ]}.

{plugins, [pc,
           {rebar3_cuttlefish, ".*", {git, "git://github.com/tsloughter/rebar3_cuttlefish.git", {branch, "master"}}}
          ]}.

{pre_hooks, [{compile, "make version_header"}]}.

{provider_hooks,
 [{post, [{release, cuttlefish}]}]}.

{overrides,
 [{override, setup, [{post_hooks, []}]},
  {override, eleveldb,
   [{pre_hooks, [{compile, "c_src/build_deps.sh get-deps"},
                 {compile, "c_src/build_deps.sh"}]},

    {post_hooks, [{clean, "c_src/build_deps.sh clean"}]},

    {plugins,
     [{pc, {git, "git@github.com:blt/port_compiler.git", {branch, "master"}}}]},

    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]}]}.

{profiles, [
            {short, [{erl_opts, [{d, 'EQC_SHORT_TEST'}]}]},
            {long, [{erl_opts, [{d, 'EQC_LONG_TEST'}]}]},
            {prod, [{relx, [{dev_mode, false}]}]}
           ]}.

{relx,
 [{release, {"howl", "0.6.2"},
   [
    sasl,
    howl,
    {recon, load},
    {setup , load},
    {cuttlefish, load},
    {bear, load}, % we need this since folsom doesn't include it
    {eper, load}
   ]},

  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{mkdir, "etc"},
    {copy, "rel/files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "rel/files/howl", "bin/howl"},
    {template, "rel/files/howl-admin", "bin/howl-admin"},
    {copy, "_build/default/bin/cuttlefish", "bin/cuttlefish"},
    {copy, "share", "share"},
    {copy, "_build/default/lib/fifo_utils/priv/update_config.sh", "share/"},
    {copy, "_build/default/lib/howl/mibs/HOWL-MIB.mib", "share/HOWL-MIB.mib"},
    {template, "schema/howl.schema", "share/schema/00-howl.schema"},
    {template, "_build/default/lib/wiggle/priv/wiggle.schema", "share/schema/01-wiggle.schema"},
    {template, "_build/default/lib/wiggle/priv/wiggle_cache.schema", "share/schema/02-wiggle_cache.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/03-vm.schema"},
    {template, "_build/default/lib/riak_core/priv/riak_core.schema", "share/schema/04-riak_core.schema"},
    {template, "schema/lager.schema", "share/schema/05-lager.schema"},
    {template, "_build/default/lib/libsnarl/priv/libsnarl.schema", "share/schema/06-libsnarl.schema"},
    {template, "_build/default/lib/fifo_s3/priv/fifo_s3.schema", "share/schema/07-fifo_S3.schema"},
    {template, "_build/default/lib/ensq_rpc/priv/ensq_rpc.schema", "share/schema/08-ensq_rpc.schema"},
    {template, "_build/default/lib/dqe/priv/dqe.schema", "share/schema/09-dqe.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/10-folsom_ddb.schema"},
    {template, "schema/snmp.schema", "share/schema/11-snmp.schema"},
    {template, "_build/default/lib/mdns_client_lib/priv/mdns_client.schema", "share/schema/12-mdns_client.schema"},
    {template, "_build/default/lib/mdns_server_lib/priv/mdns_server.schema", "share/schema/13-mdns_server.schema"},
    {copy, "snmp", "snmp"}
   ]}]}.

%% Cuttlefish filename
{cuttlefish_filename, "howl.conf.example"}.

{dialyzer, [
            {plt_extra_apps, [riak_ensemble, rankmatcher, sgte, folsom, libleofs, base16, chash, fifo_utils, jsx, jsxd, fifo_spec, fifo_dt, riak_core]}
            %%{base_plt_apps, [atom(), ...]},
            %%{base_plt_location, global | file:filename()},
            %%{base_plt_prefix, string()}
          ]}.
