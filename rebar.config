%% -*- erlang -*-
{sub_dirs, ["rel", "apps/howl"]}.
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  %% Lets overwrite stuff that is not 18.0 compatible :(
  edown,
  {ranch,".*",     {git, "https://github.com/project-fifo/ranch.git",       {branch, "1.1.0p"}}},

  %% And our other deps
  {fifo_lager, ".*", {git, "https://github.com/project-fifo/fifo_lager.git", {branch, "master"}}},
  {lager, "2.1.1"},
  {clique, ".*", {git, "https://github.com/project-fifo/clique.git", {branch, "develop"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},
  {wiggle, ".*", {git, "https://github.com/project-fifo/wiggle-app.git", {branch, "test"}}},
  {riak_core, ".*", {git, "https://github.com/project-fifo/riak_core.git", {branch, "fifo-0.7.3"}}},
  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {tag, "2.1.2"}}},
  {mdns_server_lib, ".*", {git, "https://github.com/Licenser/mdns_server_lib.git", {branch, "master"}}},
  {bugsnag, ".*", {git, "https://github.com/project-fifo/bugsnag-erlang.git", {branch, "master"}}},
  {cowboy, "1.0.2"},
  {jsx, "1.4.5"},
  {msgpack, "0.3.5"},
  jsxd,
  {fifo_utils, ".*", {git, "https://github.com/project-fifo/fifo_utils.git", {branch, "master"}}},
  {libsnarl, ".*", {git, "https://github.com/project-fifo/libsnarl.git", {branch, "test"}}},
  folsom_ddb,
  %% We need that because riak_core includes some old thing
  %% Runtime tools
  eper,
  recon
 ]}.

{plugins, [pc,
           {rebar3_cuttlefish, ".*", {git, "git://github.com/tsloughter/rebar3_cuttlefish.git", {branch, "master"}}}
          ]}.

{pre_hooks, [{compile, "make version_header"}]}.

{provider_hooks,
 [{post, [{release, cuttlefish}]}]}.

{overrides,
 [
  %% R19
  {override, dflow,
   [{erl_opts, [debug_info]}]},
  {override, mdns_client_lib,
   [{erl_opts, [debug_info, {parse_transform, lager_transform}]}]},
  {override, edown,
   [{erl_opts, [debug_info]}]},
  {override, eper,
   [{erl_opts, [debug_info]}]},

  {override, riak_core,
   [{erl_opts, [{parse_transform, lager_transform},
                debug_info, {platform_define, "^[0-9]+", namespaced_types},
                {platform_define, "^R15", "old_hash"}]}]},
  {override, riak_ensemble,
   [{erl_opts, [debug_info,
                warn_untyped_record,
                {parse_transform, lager_transform}]}]},
  {override, pooler,
   [{erl_opts,
     [{platform_define, "^[0-9]+", namespaced_types},
      debug_info,
      inline]}]},
  %% Normal
  {override, setup, [{post_hooks, []}]},
  {override, eleveldb,
   [{pre_hooks, [{compile, "c_src/build_deps.sh get-deps"},
                 {compile, "c_src/build_deps.sh"}]},

    {post_hooks, [{clean, "c_src/build_deps.sh clean"}]},

    {plugins,
     [pc]},

    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]}]}.

{profiles,
 [
  {short, [{erl_opts, [{d, 'EQC_SHORT_TEST'}]}]},
  {long, [{erl_opts, [{d, 'EQC_LONG_TEST'}]}]},
  {prod, [{relx, [{dev_mode, false}]}]},
  {lint,  [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "0.1.4"}}}]}]}
 ]}.

{relx,
 [{release, {"howl", "0.7.3"},
   [
    sasl,
    howl,
    {setup , load},
    {cuttlefish, load},
    {bear, load}, % we need this since folsom doesn't include it
    %% we do need the followign two because qdate isn't yet including them
    {erlang_localtime, load},
    {erlware_commons, load},
    %% Runtime tools
    {recon, load},
    {eper, load}
   ]},

  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{mkdir, "etc"},
    {copy, "rel/files/erl", "erts-\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "erts-\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "rel/files/howl", "bin/howl"},
    {template, "rel/files/howl-admin", "bin/howl-admin"},
    {copy, "_build/default/bin/cuttlefish", "bin/cuttlefish"},
    {copy, "share", "share"},
    {copy, "_build/default/lib/fifo_utils/priv/update_config.sh", "share/"},
    {copy, "apps/howl/mibs/HOWL-MIB.mib", "share/HOWL-MIB.mib"},
    {template, "schema/howl.schema", "share/schema/00-howl.schema"},
    {template, "_build/default/lib/wiggle/priv/wiggle.schema", "share/schema/01-wiggle.schema"},
    {template, "_build/default/lib/wiggle/priv/wiggle_cache.schema", "share/schema/02-wiggle_cache.schema"},
    {template, "_build/default/lib/bugsnag/priv/bugsnag.schema", "share/schema/03-bugsnag.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/04-vm.schema"},
    {template, "_build/default/lib/riak_core/priv/riak_core.schema", "share/schema/05-riak_core.schema"},
    {template, "_build/default/lib/fifo_lager/priv/lager.schema", "share/schema/06-lager.schema"},
    {template, "_build/default/lib/libsnarl/priv/libsnarl.schema", "share/schema/07-libsnarl.schema"},
    {template, "_build/default/lib/fifo_s3/priv/fifo_s3.schema", "share/schema/08-fifo_S3.schema"},
    {template, "_build/default/lib/dqe/priv/dqe.schema", "share/schema/09-dqe.schema"},
    {template, "_build/default/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/10-folsom_ddb.schema"},
    {template, "schema/snmp.schema", "share/schema/11-snmp.schema"},
    {template, "_build/default/lib/mdns_client_lib/priv/mdns_client.schema", "share/schema/12-mdns_client.schema"},
    {template, "_build/default/lib/mdns_server_lib/priv/mdns_server.schema", "share/schema/13-mdns_server.schema"},
    {copy, "snmp", "snmp"}
   ]}]}.

%% Cuttlefish filename
{cuttlefish_filename, "howl.conf.example"}.

{dialyzer, [{warnings, [underspecs]}]}.

{elvis,
 [#{dirs => ["apps/*/src"],
    filter => "*.erl",
    rules => [{elvis_style, line_length,
               #{ignore => [],
                 limit => 80,
                 skip_comments => false}},
              {elvis_style, no_tabs},
              {elvis_style, no_trailing_whitespace},
              {elvis_style, macro_names, #{ignore => []}},
              {elvis_style, macro_module_names},
              {elvis_style, operator_spaces, #{rules => [{right, ","},
                                                         {right, "++"},
                                                         {left, "++"}]}},
              {elvis_style, nesting_level, #{level => 3}},
              {elvis_style, god_modules, #{limit => 25,
                                           ignore => []}},
              {elvis_style, no_if_expression},
              {elvis_style, invalid_dynamic_call,
               #{ignore => []}},
              {elvis_style, used_ignored_variable},
              {elvis_style, no_behavior_info},
              {
                elvis_style,
                module_naming_convention,
                #{regex => "^[a-z]([a-z0-9]*_?)*(_SUITE)?$",
                  ignore => []}
              },
              {
                elvis_style,
                function_naming_convention,
                #{regex => "^([a-z][a-z0-9]*_?)*$"}
              },
              {elvis_style, state_record_and_type},
              {elvis_style, no_spec_with_records},
              {elvis_style, dont_repeat_yourself, #{min_complexity => 10}},
              {elvis_style, no_debug_call,
               #{ignore => [howl_console]}}
             ]
   },
  #{dirs => ["."],
    filter => "Makefile",
    rules => [{elvis_project, no_deps_master_erlang_mk, #{ignore => []}},
              {elvis_project, protocol_for_deps_erlang_mk, #{ignore => []}}]
   },
  #{dirs => ["."],
    filter => "rebar.config",
    %% on the test branch master deps are OK
    rules => [%{elvis_project, no_deps_master_rebar, #{ignore => []}},
              {elvis_project, protocol_for_deps_rebar, #{ignore => []}}]
   },
  #{dirs => ["."],
    filter => "elvis.config",
    rules => [{elvis_project, old_configuration_format}]
   }
 ]
}.
